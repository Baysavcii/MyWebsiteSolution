@model MyWebsite.MVC.Models.AboutViewModel

	<section class="ftco-about ftco-section ftco-no-pt ftco-no-pb" id="about-section">
		<div class="container">
			<div class="row d-flex no-gutters">
				<div class="col-md-6 col-lg-5 d-flex">
					<div class="img-about img d-flex align-items-stretch">
						<div class="overlay"></div>
					<div class="img d-flex align-self-stretch align-items-center" style="background-image:url('@Model.ImageUrl');">
						</div>
					</div>
				</div>
				<div class="col-md-6 col-lg-7 pl-md-4 pl-lg-5 py-5">
					<div class="py-md-5">
						<div class="row justify-content-start pb-3">
							<div class="col-md-12 heading-section ftco-animate">
								<span class="subheading">My Intro</span>
								<h2 class="mb-4" style="font-size: 34px; text-transform: capitalize;">@Model.Title</h2>
								<p>@Model.Content</p>

								<ul class="about-info mt-4 px-md-0 px-2">
									<li class="d-flex"><span>İsim:</span> <span>@Model.Name</span></li>
									<li class="d-flex"><span>Doğum Tarihi:</span> <span>@Model.BirthDate</span></li>
									<li class="d-flex"><span>Adres:</span> <span>@Model.Address</span></li>
									<li class="d-flex"><span>Email:</span> <span>@Model.Email</span></li>
									<li class="d-flex"><span>Telefon: </span> <span>@Model.PhoneNumber</span></li>
								</ul>
							</div>
							<div class="col-md-12">
								<div class="my-interest d-lg-flex w-100">
									<div class="interest-wrap d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="flaticon-suitcases"></span>
										</div>
										<div class="text">Seyahat</div>
									</div>
									<div class="interest-wrap d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="flaticon-video-player"></span>
										</div>
										<div class="text">Film</div>
									</div>
									<div class="interest-wrap d-flex align-items-center">
										<div class="icon d-flex align-items-center justify-content-center">
											<span class="flaticon-football"></span>
										</div>
										<div class="text">Spor</div>
									</div>
								</div>
							</div>
							@if (ViewBag.ErrorMessage != null)
							{
								<div class="alert alert-danger">
									@ViewBag.ErrorMessage
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>